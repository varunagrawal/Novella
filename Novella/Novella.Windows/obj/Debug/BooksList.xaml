		<ListView x:ConnectionId='1' x:Name="Books" ItemsSource="{Binding}" 
				                       
				  SelectionMode="Single"
				  Margin="8,129,12,33" 
				  HorizontalAlignment="Center"  
				  VerticalAlignment="Center"
				  ScrollViewer.HorizontalScrollBarVisibility="Auto"
			      ScrollViewer.VerticalScrollBarVisibility="Disabled"
				  ScrollViewer.HorizontalScrollMode="Enabled"
			      ScrollViewer.VerticalScrollMode="Disabled" 
				  Height="478"
				  Width="380"
				  >
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
			<ListView.ItemTemplate>
				<DataTemplate>
					<Image Source="{Binding Cover}" Height="400" Width="280"  Margin="12,10" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

	</Grid>

	<Page.BottomAppBar>
		<CommandBar IsOpen="False" IsSticky="True" >
			<CommandBar.SecondaryCommands >
				<AppBarButton x:ConnectionId='2' Name="About" Label="about"                     />
